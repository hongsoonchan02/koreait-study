SELECT name, price 
FROM burgers;

SET sql_safe_updates =0;

UPDATE burgers b 
SET price = 1000;

UPDATE burgers b 
SET price = 500
WHERE name = '백맨';

SELECT * FROM burgers;

SET sql_safe_updates = 1;

